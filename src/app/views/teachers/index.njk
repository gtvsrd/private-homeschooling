{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <div class="header">
        <a class="button" href="/teachers/create">Novo</a>
        <form action="/teachers" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Nome ou Acompanhamento"
                value={{filter}}
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Professor</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td>
                    {% for service in teacher.subjects_taught %}
                    <span>{{service}}</span>
                    {% endfor %}
                </td>
                <td><a href="/teachers/{{teacher.id}}">ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}