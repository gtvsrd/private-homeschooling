{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar"
        style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">

    </section>
    
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome completo</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{teacher.grade}}</div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>{{teacher.type}}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            {% for service in teacher.services %}
                <div>{{service}}</div>
            {% endfor %}
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>
    </section>
</div>

{% endblock content %}